{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "BucketName": {
      "Type": "String",
      "Description": "The Name of the the S3 Bucket."
    }
  },
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Delete",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        }
      }
    }
  },
  "Outputs": {
    "BucketDomainName": {
      "Value": {
        "Fn::GetAtt": ["S3Bucket", "DomainName"]
      },
      "Description": "S3 Bucket DomainName",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-BucketDomainName"
        }
      }
    },
    "BucketRegionalDomainName": {
      "Value": {
        "Fn::GetAtt": ["S3Bucket", "RegionalDomainName"]
      },
      "Description": "S3 Bucket RegionalDomainName",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-BucketRegionalDomainName"
        }
      }
    },
    "BucketWebsiteUrl": {
      "Value": {
        "Fn::GetAtt": ["S3Bucket", "WebsiteURL"]
      },
      "Description": "S3 Bucket WebsiteURL",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-WebsiteURL"
        }
      }
    }
  }
}
